{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "devLLM",
  "version": "1.0.0",
  "identifier": "com.devllm.launcher",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://127.0.0.1:5190",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "devLLM",
        "width": 900,
        "height": 700,
        "minWidth": 600,
        "minHeight": 400,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
